{
  "name": "Turntable Enhanced",
  "version": "3.0.6",
  "manifest_version": 2,
  "description": "An extension for Turntable.fm which widens the operating area and also adds a lot of extra 'bonus' features.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Turntable Enhanced"
  },
  "homepage_url": "http://github.com/izzmo/ttenhanced",
  "permissions": [ "tabs", "unlimitedStorage", "idle", "notifications", "*://turntable.fm/" ],
   "background": {
     "scripts": ["scripts/jquery.js", "scripts/background.js"]
   },
   "web_accessible_resources": [
     "scripts/tte.js",
     "scripts/turntablecli.js",
     "styles/base.css",
     "styles/jquery-ui.css",
     "styles/style-stack-1.css",
     "styles/style-stack-2.css",
     "styles/style.css",
     "images/chat_bg_big.png",
     "images/chat_bg_med.png",
     "images/go-bottom.png",
     "images/notes.png"
   ]
}
